# ⚠️  SECURITY WARNING: NEVER commit this file with real values!
# This file contains sensitive credentials. Use deployment platform environment variables.

# === SUPABASE CONFIGURATION (PUBLIC - SAFE) ===
# Get these from: Supabase Dashboard > Settings > API Keys
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your_anon_key_here
VITE_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
VITE_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_publishable_key_here

# === DATABASE CONFIGURATION (BACKEND ONLY - KEEP SECRET!) ===
# For connection pooling optimization:
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=postgres
POSTGRES_HOST=db.your-project.supabase.co
# Use POSTGRES_URL_NON_POOLING for migrations
POSTGRES_URL_NON_POOLING=postgresql://user:password@host:5432/database
# Use POSTGRES_PRISMA_URL for application connection pooling
POSTGRES_PRISMA_URL=postgresql://user:password@pooler:6543/database?pgbouncer=true

# === SUPABASE SERVICE ROLE (BACKEND ONLY - KEEP SECRET!) ===
# ⚠️  CRITICAL: Only available on server-side! Never expose to client!
# Get from: Supabase Dashboard > Settings > API Keys > Service Role Secret
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here
SUPABASE_SECRET_KEY=your_secret_key_here

# === API INTEGRATIONS ===
VITE_ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id/

# === EMAIL CONFIGURATION ===
VITE_ADMIN_EMAIL=admin@example.com
VITE_CONTACT_EMAIL_FROM=noreply@example.com

# === SECURITY CONFIGURATION ===
# Enable CSRF protection
VITE_CSRF_PROTECTION=true
# Session timeout in minutes
VITE_SESSION_TIMEOUT=30
# Rate limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# === FEATURE FLAGS ===
# Enable analytics in production
VITE_ENABLE_ANALYTICS=false
# Enable error tracking in production
VITE_ENABLE_ERROR_TRACKING=false
# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# === DEPLOYMENT SETTINGS ===
# These are automatically set by deployment platforms, but included here for reference
NODE_ENV=production
VERCEL_ENV=production
VERCEL_URL=your-project.vercel.app

# === CDN CONFIGURATION ===
VITE_CDN_URL=https://cdn.your-domain.com
VITE_ASSET_PREFIX=/assets

# === CACHE CONFIGURATION ===
VITE_CACHE_TTL=3600
VITE_STATIC_CACHE_TTL=86400

# === SECURITY HEADERS ===
VITE_SECURITY_HEADERS_ENABLED=true
VITE_CSP_ENABLED=true
